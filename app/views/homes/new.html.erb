<div class="bg-gray-700 min-h-screen ">
<div class="flex items-center flex-col justify-center ">
<h1 class="text-2xl font-bold mb-6 text-white mt-5">Nouveau</h1>
<div class="p-8  bg-white">
<%= form_with model: @home, local: true, class: "space-y-4" do |form| %>
  <div class="flex flex-col">
    <%= form.label :image, class: "font-semibold mb-2" %>
    <%= form.text_field :image, class: "border border-gray-300 p-2 rounded" %>

  </div>

  <div class="flex flex-col">
    <%= form.label :prix, class: "font-semibold mb-2" %>
    <%= form.text_area :price, class: "border border-gray-300 p-2 rounded" %>
 
  </div>

  <div class="flex flex-col">
    <%= form.label :localisation, class: "font-semibold mb-2" %>
    <%= form.text_area :location, class: "border border-gray-300 p-2 rounded" %>
  </div>

  <div class="flex flex-col">
    <%= form.label :description, class: "font-semibold mb-2" %>
    <%= form.text_area :description, class: "border border-gray-300 p-2 rounded" %>
  </div>

  <div class="flex flex-col">
    <%= form.label :taille, class: "font-semibold mb-2" %>
    <%= form.text_area :size, class: "border border-gray-300 p-2 rounded" %>
  </div>

  <div>
    <%= form.submit 'enregistrer', class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700" %>
  </div>
  <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700">  <a href="/home/admin">
    retour
   </a> </button>
<% end %>
</div>
</div>
</div>